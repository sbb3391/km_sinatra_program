<body>

  <div class="links">
    <a href="/proposals"><h3 class="link">Proposals</h3></a>
    <h3 class="dash">=></h3>
    <a href="/proposals/<%= @proposal.id %>"><h3 class="link"><%= @proposal.id %></h3></a>
  </div>

  <form action="/proposals/<%= @proposal.id %>/edit" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">

    
    <div class="pricing_options">
      <h2>Proposal Pricing Options:</h2>
      <% PricingOption.all.each do |option| %>
      
        <% if @proposal.proposal_pricing_options.find_by(pricing_option_id: option.id) == nil %>
          <div class="section">
            <label class="container"><%= option.name %>
              <input type="checkbox" name="create_proposal_pricing_options[pricing_option_ids][]" id="<%= option.id %>" value="<%= option.id %>" >
              <span class="checkmark"></span>
            </label>
          </div>
        <% else %>
          <div class="section">
            <label class="container"><%= option.name %>
              <input type="checkbox" name="create_proposal_pricing_options[pricing_option_ids][]" id="<%= option.id %>" value="<%= option.id %>" checked >
              <span class="checkmark"></span>
            </label>
          </div>
        <% end %>
      <% end %>
    </div>

    <div>
      <label>Show summary page on preview:
        <% if @proposal.show_summary == "on" %>
          <input type="checkbox" name="show_summary" checked >
        <% else %>
          <input type="checkbox" name="show_summary">
        <% end %>
      </label> 
    </div>

    <div class="xx">
      <h2>Equipment and Accessories:</h2>
    </div>

      <!-- Loop through all proposal line items that are engines-->
      <% @proposal.line_items.where(product_id: Product.all.where(category: "Engine")).each do |line_item| %>
      
    <button type="button" class="collapsible"><%=Product.find(line_item.product_id).name %></button>
    <!-- For this engine instance, loop through all the categories-->
    <div class="content">
      
      <div class="service_terms">
        <label>Remove Unit:<input type="checkbox" name="remove_item[<%= Product.find(line_item.product_id).km_equipment %>"></label>
        <h3>Rates locked for x years: <input class="input1" type="number" value="<%= line_item.service_lock_years %>" name="lock[<%= line_item.id %>]" id="<%= line_item.service_lock_years %>"></h3>
        <h3>One impression up to: <input class="input2" type="text" value="<%= line_item.one_click_maximum %>" name="one_click[<%= line_item.id %>]" id="<%= line_item.one_click_maximum %>"></h3>
      </div>
      <table class="main">
        <thead>
          <tr class="head">
            <th>Quantity</th>
            <th>Product id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Unit Price</th>
            <th>Color Click</th>
            <th>Mono Click</th>
          </tr>
        </thead>
        <% @categories.each do |cat| %>
        
        <% if cat == "Engine" %>
          <% true %>
        <% else %>
          <tr>
            <td class="cat" colspan="7"><%= cat %></td>
          </tr>
            <% end %>

            <% Product.all.where(km_equipment: Product.find(line_item.product_id).km_equipment, category: cat).each do |drop| %>
            
            <% if !!@proposal.line_items.find_by(product_id: drop.id) && cat == "Engine" %>
              <% item_qty = @proposal.line_items.find_by(product_id: drop.id).quantity %>

              <% li_color = line_item.color_cpi %>
              <% li_mono = line_item.mono_cpi %>
              <tr>
                <td><input class="qty" type="number" value="<%= item_qty %>" name="line_item[<%= drop.id %>]" id="<%= item_qty %>"></td>
                <td><%= drop.km_product_id %></td>
                <td><%= drop.name %></td>
                <td><%= drop.description %></td>
                <td><%= drop.price %></td>
                <td><input class="qty" type="string" value="<%= line_item.color_cpi if !!line_item.color_cpi %>" name="clicks[<%= line_item.id %>][]" id="<%= line_item.color_cpi %>"></td>
                <td><input class="qty" type="string" value="<%= line_item.mono_cpi if !!line_item.mono_cpi %>" name="clicks[<%= line_item.id %>][]" id="<%= line_item.mono_cpi %>"></td>
              </tr>
            <% elsif !!@proposal.line_items.find_by(product_id: drop.id) %>
              <% item_qty = @proposal.line_items.find_by(product_id: drop.id).quantity %>
              <tr>
                <td><input class="qty" type="number" value="<%= item_qty %>" name="line_item[<%= drop.id %>]" id="<%= item_qty %>"></td>
                <td><%= drop.km_product_id %></td>
                <td><%= drop.name %></td>
                <td><%= drop.description %></td>
                <td><%= drop.price %></td>
                <tr>
              </tr>
            <% else %>
              <tr>
                <td><input class="qty" type="number" name="line_item[<%= drop.id %>]" id="<%= item_qty %>qq"></td>
                <td><%= drop.km_product_id %></td>
                <td><%= drop.name %></td>
                <td><%= drop.description %></td>
                <td><%= drop.price %></td>
              </tr>
            <% end %> 
          <% end %>
        <% end %>
      </table>
    </div>
            <% end %>

      <input class="submit_btn" type="submit">

